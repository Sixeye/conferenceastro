{% extends 'base.html.twig' %}

{% block title %}Création d'un compte{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">

{% endblock %}

{% block body %}

    {{ form_start(form) }}
<div class="m-3">
    <form class="col-md-6">
        <div class="form-group"><h6>CREATION DE COMPTE CLIENT</h6></div>
        <div class="illustration"><i class="icon ion-ios-person-outline"></i></div>

        <div class="form-group col-md-6">
            {{ form_label(form.prenom, 'Prénom') }}
            <br/>
            {{ form_widget(form.prenom) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.nom, 'Nom') }}
            <br/>
            {{ form_widget(form.nom) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.adresse, 'Adresse') }}
            <br/>
            {{ form_widget(form.adresse) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.ville, 'Ville') }}
            <br/>
            {{ form_widget(form.ville) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.code_postal, 'Code Postal') }}
            <br/>
            {{ form_widget(form.code_postal) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.email, 'Email') }}
            <br/>
            {{ form_widget(form.email) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.password, 'Mot de passe') }}
            <br/>
            {{ form_widget(form.password) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.passwordConfirm, 'Confirmation du mot de passe') }}
            <br/>
            {{ form_widget(form.passwordConfirm) }}
        </div>


        <div class="form-group col-md-6"><button class="btn btn-primary btn-block" type="submit">Créer le compte</button></div>

        {{ form_row(form._token) }}

    </form>

</div>

    {{ form_end(form) }}

{% endblock %}
